                //{ "center": "116.398258, 39.914600"},
                { "center": "117.27009, 31.96819","name":"安徽舜禹水务泵房", "pic1": [{ "a": "../img/mark_bs1.png", "url": "?a=4", "name": "设备一" }, { "a": "../img/mark_bs2.png", "url": "?a=5", "name": "设备二" }]}
