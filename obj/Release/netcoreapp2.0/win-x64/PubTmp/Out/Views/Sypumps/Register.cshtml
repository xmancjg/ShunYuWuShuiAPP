
@{
    ViewData["Title"] = "用户注册";
    ViewData["show"] = "hide";
}
<div class="login">
    <div class="register"> 
        <div class="register-logo"><img src="~/img/logo.png" /></div>
        <div class="login-form">
            <form action="/Sypumps/Login" method="post">
                <input type="text" name="username" placeholder="请输入用户名" class="login-txt" />
                <input type="text" name="password" placeholder="请输入密码" class="login-txt" />
                <input type="text" name="password" placeholder="请再次输入密码" class="login-txt" />
                <input type="text" name="username" placeholder="请输入姓名" class="login-txt" />
                <input type="text" name="username" placeholder="请输入手机号码" class="login-txt" />
                <div class="login-tel"><input type="text" name="username" placeholder="请输入手机验证码" class="login-num" /><input type="button" value="获取验证码" class="login-telbtn" /></div>
                
                <input type="submit" value="提交" class="login-btn" />
            </form>
        </div>
        <p class="login-link"><a href="/Sypumps/Login"><span>------------</span>已有账号，去登陆<span>------------</span></a></p>
    </div>
</div>
