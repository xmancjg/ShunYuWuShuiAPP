
@{
    ViewData["Title"] = "用户登陆";
    ViewData["show"] = "hide";
}
<div class="login">
    <div>
        <div class="login-logo"><img src="~/img/logo.png" /></div>
        <div class="login-form">
            <form action="/Sypumps/Index" method="post">
                <input type="text" name="username" placeholder="请输入用户名" class="login-txt" />
                <input type="text" name="password" placeholder="请输入密码" class="login-txt" />
                @if (!string.IsNullOrEmpty(ViewData["Message"].ToString())) {

                <p class="login-forget" style="color:red; align:center">@ViewData["Message"].ToString()</p>

                }
                <input type="submit" value="提交" class="login-btn" />
            </form>
        </div>
        <!--<p class="login-link"><a href="/Sypumps/Register"><span>------------</span>新用户注册<span>------------</span></a></p>-->
    </div>
</div>

